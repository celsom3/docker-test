{
  "name": "Levelhead-API",
  "version": "1.0.0",
  "description": "The API powering the Levelhead Service",
  "main": "server.js",
  "repository": {},
  "license": "",
  "dependencies": {
    "bcrypt": "^1.0.2",
    "bluebird": "^3.4.7",
    "boom": "^4.2.0",
    "confidence": "^3.0.2",
    "dotenv": "^4.0.0",
    "glue": "^4.1.0",
    "hapi": "^16.1.0",
    "hapi-auth-bearer-token": "^4.3.1",
    "inert": "^4.1.0",
    "joi": "^10.2.0",
    "mongoose": "^4.7.7",
    "vision": "^4.1.1",
    "wreck": "^10.0.0"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-core": "^6.22.1",
    "babel-eslint": "^7.1.1",
    "babel-plugin-inline-json-import": "^0.2.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-2": "^6.22.0",
    "babel-register": "^6.22.0",
    "chai": "^3.5.0",
    "eslint": "^3.14.0",
    "eslint-plugin-import": "^2.2.0",
    "husky": "^0.13.3",
    "istanbul": "^1.1.0-alpha.1",
    "mocha": "^3.2.0",
    "nodemon": "^1.11.0",
    "sinon": "^1.17.7"
  },
  "scripts": {
    "start": "confidence -c confidence.json --filter.env=development > manifest.json | nodemon ./server.js --exec babel-node",
    "pretest-old": "NODE_ENV=test babel-node ./scripts/bootstrap",
    "test": "confidence -c confidence.json --filter.env=test > manifest.json | mocha --compilers js:babel-register --recursive ./app/**/*.spec.js",
    "posttest-old": "babel-node ./scripts/delete-test-db",
    "bootstrap": "babel-node ./scripts/bootstrap",
    "lint": "eslint .",
    "cover-run": "confidence -c confidence.json --filter.env=test > manifest.json | istanbul cover -x ./app/**/*.spec.js _mocha -- -u tdd -R spec --report text --check-coverage --coverage --compilers js:babel-register --recursive ./app/**/*.spec.js",
    "cover": "npm run pretest && npm run cover-run && npm run posttest",
    "precommit": "npm test",
    "prepush": "npm test"
  }
}
